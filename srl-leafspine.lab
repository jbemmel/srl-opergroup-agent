name: opergroup-lab2

topology:
  kinds:
    srl:
      image: srl/opergroup-agent:latest
      extras:
        srl-agents: [ ./opergroup-agent.yml ] 

    linux:
      image: frr-with-lldp:latest # Custom built image with lldpad and daemons included

  nodes:
    leaf1:  { kind: srl, startup-config: spine1.cfg }
    leaf2:  { kind: srl, startup-config: spine1.cfg }
    spine1: { kind: srl, startup-config: spine1.cfg }

    h1:
      kind: linux

    h2:
      kind: linux

  links:
    - endpoints: ["leaf1:e1-1","spine1:e1-1"]
    - endpoints: ["leaf2:e1-1","spine1:e1-2"]

    - endpoints: ["h1:e1-1","leaf1:e1-3"]
    - endpoints: ["h2:e1-1","leaf2:e1-3"]
